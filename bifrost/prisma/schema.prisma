generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        String    @id @default(uuid())
  nome      String
  email     String    @unique
  senha     String
  ehAdmin   Boolean   @default(false) @map("eh_admin")
  estaAtivo Boolean   @default(true) @map("esta_ativo")
  createdAt DateTime  @default(now()) @map("created_at") @db.Timestamp(3)
  updatedAt DateTime? @map("updated_at") @db.Timestamp(3)
  deletedAt DateTime? @map("deleted_at") @db.Timestamp(3)

  @@map("usuarios")
}

model Url {
  id        String    @id @default(uuid())
  nome      String
  utms      Json
  target    String
  estaAtivo Boolean   @default(true) @map("esta_ativo")
  createdAt DateTime  @default(now()) @map("created_at") @db.Timestamp(3)
  updatedAt DateTime? @map("updated_at") @db.Timestamp(3)
  deletedAt DateTime? @map("deleted_at") @db.Timestamp(3)

  acessos   Acesso[]
  @@map("urls")
}

model Acesso {
  id        Int      @id @default(autoincrement())
  urlId     String   
  url       Url      @relation(fields: [urlId], references: [id])
  device    Json
  timezone  String   @default("Unknown")
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamp(3)
   @@map("acessos")
}
